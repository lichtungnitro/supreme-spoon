{
    "globalShortcut": "Alt+C",
    "mcpServers": {
        "Sequential Thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        },
        "Fetch": {
            "command": "uvx",
            "args": [
                "mcp-server-fetch"
            ]
        },
        "Time Server": {
            "command": "uvx",
            "args": [
                "mcp-server-time",
                "--local-timezone",
                "Europe/London"
            ]
        },
        "Context 7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp"
            ]
        },
        "Server Memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ]
        },
        "Brave Search": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-brave-search"
            ],
            "env": {
                "BRAVE_API_KEY": "X_API_KEY"
            }
        },
        "File System": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "~/Desktop",
                "~/Documents",
                "~/Downloads"
            ]
        },
        "Linear": {
            "command": "npx",
            "args": [
                "-y",
                "mcp-remote",
                "https://mcp.linear.app/sse"
            ]
        }
    }
}
