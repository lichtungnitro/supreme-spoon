{
    "globalShortcut":"Alt+C",
    "mcpServers":{
        "Sequential Thinking":{
            "command":"/opt/homebrew/bin/npx",
            "args":[
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        },
        "Time Server":{
            "command":"/Users/nitrolichtung/.local/bin/uvx",
            "args":[
                "mcp-server-time",
                "--local-timezone",
                "Europe/London"
            ]
        },
        "Context 7":{
            "command":"/opt/homebrew/bin/npx",
            "args":[
                "-y",
                "@upstash/context7-mcp"
            ]
        },
        "Brave Search":{
            "command":"npx",
            "args":[
                "-y",
                "@modelcontextprotocol/server-brave-search"
            ],
            "env":{
                "BRAVE_API_KEY":"X_API_KEY"
            }
        },
        "Linear":{
            "command":"/opt/homebrew/bin/npx",
            "args":[
                "-y",
                "mcp-remote",
                "https://mcp.linear.app/sse"
            ]
        },
        "File System":{
            "command":"/opt/homebrew/bin/npx",
            "args":[
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "~/Desktop",
                "~/Documents",
                "~/Downloads"
            ]
        }
    }
}
