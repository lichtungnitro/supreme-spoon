// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
// Coding experience optimization
{
  "agent": {
    "always_allow_tool_actions": true,
    "enable_feedback": false,
    "play_sound_when_agent_done": true,
    "use_modifier_to_send": true,
    "default_model": {
      "provider": "openrouter",
      "model": "z-ai/glm-4.5-air:free"
    },
    "inline_assistant_model": {
      "provider": "openrouter",
      "model": "anthropic/claude-3.5-sonnet"
    },
    "commit_message_model": {
      "provider": "openrouter",
      "model": "qwen/qwen3-code:free"
    },
    "thread_summary_model": {
      "provider": "openrouter",
      "model": "google/gemini-2.5-flash"
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "edit_predictions_disabled_in": ["comment", "string"],
  "edit_predictions": {
    "mode": "subtle",
    "disabled_globs": ["**/*.log"],
    "enabled_in_text_threads": false,
    "copilot": {
      "proxy": "http://127.0.0.1:7890",
      "proxy_no_verify": false
    }
  },
  "hide_mouse": "on_typing_and_movement",
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "inlay_hints": {
    "enabled": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "wrap_guides": [90],
  "show_wrap_guides": true,

  // Enable Vim mode and relevant setup
  "base_keymap": "Atom",
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "never"
  },
  "relative_line_numbers": true,

  // Tweak Git preference
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 500
    }
  },

  // Tweak user interface
  "buffer_font_family": "Zed Plex Mono",
  "buffer_font_size": 12,
  "buffer_font_features": {
    "calt": false
  },
  "ui_font_family": "Zed Plex Mono",
  "ui_font_size": 14,
  "agent_font_size": 14,
  "unnecessary_code_fade": 0.7,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Gruvbox Dark Hard"
  },
  "project_panel": {
    "button": false,
    "git_status": true,
    "indent_guides": {
      "show": "always"
    },
    "indent_size": 17,
    "scrollbar": { "show": "never" }
  },
  "scrollbar": {
    "show": "never"
  },
  "tabs": {
    "show_diagnostics": "errors"
  },
  "tab_bar": {
    "show": true
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_user_picture": false,
    "show_sign_in": false
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },

  // Automatic workspace activation
  "terminal": {
    "detect_venv": {
      "on": {
        "activate_script": "default",
        "directories": ["env", ".env", "venv", ".venv"]
      }
    }
  },

  // Disable sending telemetry data
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
