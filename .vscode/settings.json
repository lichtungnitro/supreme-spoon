{
  // Accessibility settings
  "accessibility.dimUnfocused.enabled": true,

  // Enable breadcrumbs
  "breadcrumbs.enabled": true,

  // Debug console settings
  "debug.console.fontFamily": "Maple Mono",
  "debug.console.fontSize": 11,

  // Podman settings
  "dev.containers.dockerPath": "podman",
  "dev.containers.dockerComposePath": "podman-compose",

  // Editor settings
  "editor.cursorBlinking": "phase",
  "editor.detectIndentation": true,
  "editor.lineHeight": 15,
  "editor.foldingImportsByDefault": true,
  "editor.fontFamily": "Maple Mono, MonoLisa, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.fontSize": 11,
  "editor.fontWeight": "400",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.renderLineHighlight": "gutter",
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [88, 90],
  "editor.semanticTokenColorCustomizations": {
    "rules": {
      "interface": {
        "italic": true
      },
      "selfParameter": {
        "italic": true
      },
      "keyword": {
        "italic": true
      },
      "*.static": {
        "italic": true
      }
    }
  },
  "editor.smoothScrolling": true,
  "editor.tabSize": 4,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "constant.language.undefined",
          "constant.language.null",
          "constant.language.nullptr",
          "meta.type keyword.operator.expression.typeof",
          "meta.type keyword.operator.expression.keyof",
          "keyword.control",
          "keyword.function",
          "keyword.operator.borrow.and.rust",
          "storage.type",
          "storage.modifier",
          "variable.language.this",
          "markup.italic"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 88,
  "editor.unicodeHighlight.allowedCharacters": {
    "’": true,
    "“": true,
    "”": true
  },

  // Explorer settings
  "explorer.autoReveal": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": false,
  "explorer.decorations.colors": false,

  // Files settings
  "files.autoGuessEncoding": true,
  "files.autoSave": "onFocusChange",
  "files.encoding": "utf8",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // Git settings
  "git.autofetch": true,

  // Markdown settings
  "markdown.math.enabled": true,
  "markdown.preview.fontSize": 11,
  "markdown.validate.enabled": true,

  // Theme settings
  "chaliceIcons.showArrows": true,
  "window.autoDetectColorScheme": true,

  // Jupyter Notebook settings
  "notebook.formatOnSave.enabled": true,
  "notebook.formatOnCellExecution": true,
  "notebook.lineNumbers": "on",
  "notebook.markdown.lineHeight": 15,

  // Python settings
  "python.envFile": "${workspaceFolder}/.env",
  "python.languageServer": "Pylance",
  "python.pipenvPath": "/Users/nitrolichtung/.local/bin/pipenv",
  "python.venvFolders": [
    "envs",
    "virtualenvs",
    ".direnv",
    ".env",
    ".pyenv",
    ".venv"
  ],

  // Git settings
  "git.ignoreLegacyWarning": true,
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,

  // Security settings
  "security.workspace.trust.startupPrompt": "always",

  // Terminal settings
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "Maple Mono",
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.fontWeightBold": "normal",
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.suggest.enabled": true,
  "terminal.integrated.profiles.osx": {
    "bash": {
      "path": "bash",
      "args": ["-l"],
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh",
      "args": ["-l"]
    },
    "fish": {
      "path": "fish",
      "args": ["-l"]
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "rosetta": {
      "path": "arch",
      "args": ["-x86_64", "zsh", "-l"],
      "overrideName": true
    }
  },

  // Windows settings
  "window.doubleClickIconToClose": true,
  "window.commandCenter": false,

  // Workbench settings
  "workbench.activityBar.location": "top",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showIcons": false,
  "workbench.editor.showTabs": "none",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editorAssociations": { "*.md": "vscode.markdown.preview.editor" },
  "workbench.iconTheme": "chalice-icon-theme",
  "workbench.layoutControl.enabled": false,
  "workbench.list.openMode": "doubleClick",
  "workbench.preferredLightColorTheme": "Default Dark Modern",
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "readme",
  "workbench.statusBar.visible": true,
  "workbench.tree.indent": 11,

  // JSON settings
  "[json][jsonc]": {
    "editor.codeActionsOnSave": { "source.fixAll": "explicit" },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": true
  },

  // Markdown settings
  "[markdown]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": "explicit"
    },
    "editor.formatOnPaste": true,
    "files.trimTrailingWhitespace": false
  },

  // Python settings
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports.ruff": "explicit"
    },
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  // YAML settings
  "[yaml][yml]": {
    "editor.codeActionsOnSave": { "source.fixAll": "explicit" },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnPaste": true
  },

  // Cline settings
  "cline.chromeExecutablePath": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome"
}
